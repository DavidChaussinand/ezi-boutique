{% extends 'base.html.twig' %}



{% block title %}Mot de passe oublié : ezi {% endblock %}


{% block navbar %}
     {{ include ('layout/othernavbar.html.twig')}}
{% endblock %}

{% block body  %}

<div class="d-flex justify-content-center">
    <div class="w-50"> 
      

        <form method="post">
         

            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser le mot de passe</h1>
            {% for message in app.flashes('notice') %}
               <div class="alert alert-info">{{ message }}</div>
            {% endfor  %}

            <label for="inputEmail">Votre Email</label>
            <input type="email"  name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        
            <button class="btn btn-lg btn-info mt-3 w-100" type="submit">
               Valider
            </button>
        
            <hr>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login') }}">vous connecter</a></p>
        </form>
    </div>
</div>

{% endblock %}