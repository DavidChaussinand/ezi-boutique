{% extends 'base.html.twig' %}

{% block title %} page d'accueil {% endblock %}


{% block body %}


    




<h1 class="text-center"> Nos produits références </h1>
<p class="text-center"> Découvrez nos produits les plus vendus</p>
<div class="container ">
    <div class="row justify-content-center">
        {% for product in products %}
            <div class="col-md-3 mt-3">
                <div class="product-item text-center">
                    <a href="{{ path ('app_product', { 'slug' : product.slug}) }}">
                        <img src="/uploads/files/{{product.illustration}}" alt="{{ product.name}}" class="img-fluid">
                    </a> 
                    <h5>{{ product.name}}</h5>
                    <span> {{product.surnom}}</span>
                    <span> {{(product.price / 100)| number_format(2,',')  }} €</span>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
